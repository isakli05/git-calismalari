
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<DAL.ORM.Entity.Category>

<form action="/Product/Add" method="post">
    <div class="form-group">
        <label for="Name">
            Ismi
        </label>
        <input type="text" name="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="UnitPrice">
            Fiyatı
        </label>
        <input type="text" name="UnitPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Quantity">
            Birimi
        </label>
        <input type="text" name="Quantity" class="form-control" />
    </div>
    <div class="form-group">
        <label for="UnitsInStock">
            Stok Miktarı
        </label>
        <input type="number" name="UnitsInStock" class="form-control" />
    </div>
    <div class="form-group">
        <label for="CategoryID">
            Kategori Seçiniz
        </label>
        <select name="CategoryID" class="form-control">
            @*<option value="123">İçecekler 1</option>
                <option value="1234">İçecekler 2</option>
                <option value="1235">İçecekler 3</option>*@
            @foreach (var item in Model)
            {
                <option value="@item.ID">@item.Name</option>
            }
        </select>
    </div>
    <input type="submit" name="Kaydet" value="Kaydet" class="form-control btn btn-primary" />
</form>

