
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<DAL.ORM.Entity.Product>

<div class="row" style="margin-top:50px;">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Ürün ismi</th>
                    <th>Ürün Fiyatı</th>
                    <th>Ürün Birimi</th>
                    <th>Ürün Stok Miktarı</th>
                    <th>Ürün Kategorisi</th>
                    <th colspan="2">Güncelle/Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.UnitPrice</td>
                        <td>@item.Quantity</td>
                        <td>@item.UnitsInStock</td>
                        <td>@item.Category.Name</td>
                        <td>
                            <a href="/Product/Update/@item.ID">Güncelle</a>
                            /
                            <a href="/Product/Delete/@item.ID">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
