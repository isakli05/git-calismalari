
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model MVC_EF_CF_CRUD.Models.VM.ProductVM

<form action="/Product/Update" method="post">
    <div class="form-group">
        <label for="Name">
            Ismi
        </label>
        <input type="text" name="Name" value="@Model.Product.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="UnitPrice">
            Fiyatı
        </label>
        <input type="text" name="UnitPrice" value="@Model.Product.UnitPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Quantity">
            Birimi
        </label>
        <input type="text" name="Quantity" value="@Model.Product.Quantity" class="form-control" />
    </div>
    <div class="form-group">
        <label for="UnitsInStock">
            Stok Miktarı
        </label>
        <input type="number" name="UnitsInStock" value="@Model.Product.UnitsInStock" class="form-control" />
    </div>
    <div class="form-group">
        <label for="CategoryID">
            Kategori Seçiniz
        </label>
        <select name="CategoryID" class="form-control">
            @foreach (var item in Model.Categories)
            {
                <option value="@item.ID">@item.Name</option>
            }
        </select>
    </div>
    <input type="text" style="visibility:hidden" name="ID" value="@Model.Product.ID" />
    <input type="submit" name="Kaydet" value="Güncelle" class="form-control btn btn-primary" />
</form>
