@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form action="/Category/Add" onsubmit="return alfabe_kontrol(this)" method="post">
    <div class="form-group">
        <label for="Name">
            Ismi
        </label>
        <input type="text" name="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Description">
            Açıklama
        </label>
        <input type="text" name="Description" class="form-control" />
    </div>
    <input type="submit" name="Kaydet" value="Kaydet" class="form-control btn btn-primary" />
</form>

@section scripts{
    <script>
        //Regex araştırınız!
        function alfabe_kontrol(harfler) {
            var regex = /^[a-zA-Z]+$/;
            if (harfler.Name.value == "") {
                alert("İsim Boş Geçilemez!")
                harfler.Name.focus();
                return false;
            }

            if (regex.test(harfler.Name.value) == false) {
                alert("İsim sadece harflerden oluşabilir!");
                harfler.Name.focus();
                return false;
            }

            return true;
        }
    </script>

}
