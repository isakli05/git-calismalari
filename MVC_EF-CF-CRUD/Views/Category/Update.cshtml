
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model MVC_EF_CF_CRUD.Models.DTO.CategoryDTO

<form action="/Category/Update" method="post">
    <div class="form-group">
        <label for="Name">
            Ismı
        </label>
        <input type="text" name="Name" value="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Description">
            Açıklama
        </label>
        <input type="text" name="Description" value="@Model.Description" class="form-control" />
    </div>
    <input type="text" style="visibility:hidden" name="ID" value="@Model.ID" />
    <input type="submit" name="Guncelle" value="Güncelle" class="form-control btn btn-primary"/>
</form>
